<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00674c"
    tools:context=".Filter">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="626dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Restaurant Finder"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.constraint.ConstraintLayout

        android:id="@+id/constraintLayout"
        android:layout_width="302dp"
        android:layout_height="356dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangle_boundry"
        android:outlineAmbientShadowColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <Button
            android:id="@+id/button2"
            android:layout_width="192dp"
            android:layout_height="50dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/filterbutton"
            android:text="Food style"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button3"
            android:layout_width="192dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/filterbutton"
            android:text="City"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button4"
            android:layout_width="192dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/filterbutton"
            android:text="State"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button5"
            android:layout_width="192dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/filterbutton"
            android:text="Zip"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            tools:ignore="MissingConstraints" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/button11"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/custom_round_corners"
        android:backgroundTint="#ffffff"
        android:onClick="goBackToStartUp"
        android:text="Back"
        android:textAlignment="center"
        android:textColor="#00674c"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button10"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_round_corners"
        android:backgroundTint="#ffffff"
        android:onClick="goToRestaurantListonSearch"
        android:text="Search"
        android:textAlignment="center"
        android:textColor="#00674c"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>